{
  "name": "evna",
  "version": "1.0.0",
  "description": "EVNA: Agent SDK with pgvector RAG for rich context synthesis and brain boot functionality",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "evna": "./bin/evna"
  },
  "scripts": {
    "start": "bun run src/cli.ts",
    "dev": "bun --watch src/cli.ts",
    "cli": "bun run src/cli.ts",
    "agent": "bun run src/interfaces/cli.ts",
    "tui": "bun run src/interfaces/tui/tui.ts",
    "mcp-server": "bun run src/mcp-server.ts",
    "remote-mcp": "./run-remote-mcp.sh",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "agent-sdk",
    "mcp",
    "pgvector",
    "rag",
    "context-synthesis"
  ],
  "author": "Evan (QTB)",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.30",
    "@anthropic-ai/sdk": "^0.68.0",
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@opentui/core": "^0.1.0",
    "@supabase/supabase-js": "^2.75.0",
    "@types/node": "^24.7.2",
    "cohere-ai": "^7.19.0",
    "dotenv": "^17.2.3",
    "openai": "^6.3.0",
    "pg": "^8.16.3",
    "toml": "^3.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "overrides": {
    "body-parser": ">=2.2.1"
  }
}
